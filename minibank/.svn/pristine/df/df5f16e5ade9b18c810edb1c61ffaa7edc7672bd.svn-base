<title><span key="transactions.deposit.title"/></title>
<content tag="heading"><span key="transactions.deposit.heading"/></content>

<body jwcid="@Body" id="transactions">

<span jwcid="@ShowMessage"/>

<span jwcid="@ShowValidationError" delegate="ognl:beans.delegate"/>

<div class="separator"></div>
  
<form jwcid="transactionsForm@Form" delegate="ognl:beans.delegate" clientValidationEnabled="true">
<ul>
    <li class="info">
        <span key="product.message"/>
        <input jwcid="@Hidden" type="hidden" id="id" value="ognl:transactions.id" />
    </li>
    <li>
        <label class="desc" jwcid="@FieldLabel" field="ognl:components.amountField">Amount</label>
        <input jwcid="amountField@TextField" type="text" value="ognl:transactions.amount" 
        validators="validators:required" id="amount" class="text large" displayName="message:transactions.amount"/>
    </li>
    
    <li>
        <label class="desc" jwcid="@FieldLabel" field="ognl:components.accountDestinationField">Destination</label>
        <input jwcid="accountDestinationField@TextField" type="text" value="ognl:transactions.accountDestination" 
        validators="validators:required" id="accountDestination" class="text large" displayName="message:transactions.accountDestination"/>
    </li>
        
    <li class="buttonBar bottom">    	
    	<span jwcid="@If" condition="ognl:transactions.amount== null">
        	<input type="submit" class="button" jwcid="@Submit" value="message:button.add" id="save" action="listener:save"/>
        </span>
        <span jwcid="@If" condition="ognl:product.amount != null">
        	<input type="submit" class="button" jwcid="@Submit" value="message:button.edit" id="save" action="listener:save"/>
        </span>    
        <input type="submit" class="button" jwcid="@Submit" value="message:button.cancel" id="cancel" action="listener:cancel"
            onclick="form.onsubmit = null"/>
    </li>
</ul>
</form>

<script type="text/javascript">
    Form.focusFirstElement($("transactionsDepositForm"));
    highlightFormElements();
</script>

</body>
